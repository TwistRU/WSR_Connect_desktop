<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<fx:root stylesheets="@../../../styles/mainScreenStyles.css" type="BorderPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <VBox style="-fx-background-color: #1565C0;" BorderPane.alignment="CENTER">
         <ImageView fx:id="avatarImage" fitHeight="70.0" fitWidth="70.0" pickOnBounds="true">
            <Image url="@../../../assets/images/avatar_image_1.jpg"/>
         </ImageView>
         <VBox fx:id="sideBar" alignment="CENTER_LEFT" spacing="40.0" style="-fx-background-color: #1565C0;"
               VBox.vgrow="ALWAYS">
            <Button fx:id="messagesButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                    styleClass="sideButton">
               <VBox.margin>
                  <Insets left="5.0" right="5.0"/>
               </VBox.margin>
            </Button>
            <Button fx:id="calendarButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                    styleClass="sideButton" stylesheets="@../../../styles/mainScreenStyles.css">
               <VBox.margin>
                  <Insets left="5.0" right="5.0"/>
               </VBox.margin>
            </Button>
            <Button fx:id="avatarButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                    styleClass="sideButton" stylesheets="@../../../styles/mainScreenStyles.css">
               <VBox.margin>
                  <Insets left="5.0" right="5.0"/>
               </VBox.margin>
            </Button>
            <Button fx:id="gearButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                    styleClass="sideButton" stylesheets="@../../../styles/mainScreenStyles.css">
               <VBox.margin>
                  <Insets left="5.0" right="5.0"/>
               </VBox.margin>
            </Button>
         </VBox>
      </VBox>
   </left>
   <center>
      <BorderPane fx:id="componentsRoot" BorderPane.alignment="CENTER" />
   </center>
</fx:root>
