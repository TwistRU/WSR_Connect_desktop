<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
          <content>
                <VBox fx:id="messageScope" alignment="BOTTOM_LEFT" style="-fx-background-color: #B5DEFB;">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
          </content>
      </ScrollPane>
          <HBox alignment="CENTER_LEFT" style="-fx-background-color: #1565C0;">
              <children>
                  <Button fx:id="attachButton" mnemonicParsing="false" styleClass="attachButton" stylesheets="@../../../../styles/chatScreenStyles.css">
                      <HBox.margin>
                          <Insets bottom="7.0" left="5.0" right="5.0" top="7.0" />
                      </HBox.margin>
                  </Button>
                  <TextField fx:id="input" styleClass="chatTextField" stylesheets="@../../../../styles/chatScreenStyles.css" HBox.hgrow="ALWAYS">
                      <HBox.margin>
                          <Insets bottom="10.0" top="10.0" />
                      </HBox.margin>
                  </TextField>
                  <Button fx:id="sendButton" mnemonicParsing="false" styleClass="sendButton" stylesheets="@../../../../styles/chatScreenStyles.css">
                      <HBox.margin>
                          <Insets bottom="7.0" left="5.0" right="5.0" top="7.0" />
                      </HBox.margin>
                  </Button>
              </children>
          </HBox>
   </children>
</fx:root>
