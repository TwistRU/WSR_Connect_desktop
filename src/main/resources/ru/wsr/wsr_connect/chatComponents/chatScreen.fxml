<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<fx:root fx:id="root" style="-fx-background-color: #BBDEFB;" type="BorderPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox fx:id="chatBox" minWidth="400.0" styleClass="chatBox" stylesheets="@../../../../styles/chatScreenStyles.css" BorderPane.alignment="CENTER">
         <HBox>
            <VBox.margin>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </VBox.margin>
            <children>
               <TextField styleClass="textField" stylesheets="@../../../../styles/chatScreenStyles.css" HBox.hgrow="ALWAYS">
                  <HBox.margin>
                     <Insets right="10.0" />
                  </HBox.margin>
               </TextField>
               <Button fx:id="searchButton" mnemonicParsing="false" styleClass="searchButton" stylesheets="@../../../../styles/chatScreenStyles.css" />
            </children>
         </HBox>
         <ScrollPane minWidth="400.0" styleClass="scrollPane" stylesheets="@../../../../styles/chatScreenStyles.css">
            <VBox.margin>
               <Insets />
            </VBox.margin>
            <VBox minWidth="370.0" spacing="10.0">
               <padding>
                  <Insets left="20.0" />
               </padding>
            </VBox>
         </ScrollPane>
      </VBox>
   </center>
   <top>
      <Text fx:id="nameField" strokeType="OUTSIDE" strokeWidth="0.0" text="Username" BorderPane.alignment="TOP_LEFT">
         <font>
            <Font size="36.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="12.0" left="50.0" top="10.0" />
         </BorderPane.margin>
      </Text>
   </top>
</fx:root>
