    <ImageView fx:id="avatarImage" fitHeight="70.0" fitWidth="70.0" pickOnBounds="true">
        <Image url="@../../../../assets/images/default_chat_image.jpg" />
    </ImageView>
    <VBox HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
        </HBox.margin>
        <Label fx:id="chatName" text="Username">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <Label fx:id="chatLastMessage" text="Last message" />
    </VBox>
</fx:root>
